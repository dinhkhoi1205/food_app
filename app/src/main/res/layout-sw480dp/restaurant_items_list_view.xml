<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- CardView Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">

        <!-- Linear Layout Inside Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Image and Add Button Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Food Image -->
                <ImageView
                    android:id="@+id/food_restaurant_image"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop" />

                <!-- Add Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_add_restaurant"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/green"
                    app:icon="@drawable/baseline_add_24"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="10dp"
                    android:padding="14dp"
                    android:layout_marginBottom="10dp" />
            </FrameLayout>

            <!-- Food Name -->
            <TextView
                android:id="@+id/food_name_restaurant_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Burger Big Mac"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <!-- Food Price -->
            <TextView
                android:id="@+id/food_price_restaurant_list_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="119.000"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
