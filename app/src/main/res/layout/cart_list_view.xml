<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle"
    android:layout_marginTop="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/food_image_cart_CardView"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:elevation="12dp"
        app:cardCornerRadius="50dp"
        android:layout_margin="20dp"
        >
    <ImageView
        android:id="@+id/food_image_cart_imageview"
        android:layout_width="120dp"
        android:layout_height="100dp"
        tools:src="@drawable/sausage_pizza"
        android:scaleType="centerCrop"
        />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/food_name_cart_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/food_image_cart_CardView"
        tools:text="Pizza Pepperoni"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/dec_and_inc_button_cart_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_name_cart_list_view"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/food_image_cart_CardView"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_decrement"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/black"
            android:onClick="decrement_cart_listView"
            android:padding="12dp"
            android:textColor="@color/white"
            app:icon="@drawable/baseline_remove_24" />

        <TextView
            android:id="@+id/textView_quantity_cart_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_increment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/black"
            android:onClick="increment_cart_listView"
            android:padding="12dp"
            android:textColor="@color/white"
            app:icon="@drawable/baseline_add_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/price_text_view_cart_list_view"
        android:layout_toEndOf="@+id/food_name_cart_list_view"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        tools:text="45.00"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView_price_sumOf_cart_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="90dp"
        android:layout_toEndOf="@+id/dec_and_inc_button_cart_list_view"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="90.00" />
</RelativeLayout>